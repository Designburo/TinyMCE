{
			"title": mw.msg("tinymce-wikisourcecode"),
			"size": 'large',
			"body": {
				"type": 'panel', 
				"items": [
					{
						"type": 'textarea', 
						"name": 'code', 
					}
				]
			},
			"buttons": [
				{
					"type": 'cancel',
					"name": 'closeButton',
					"text": 'Cancel'
				},
				{
					"type": 'submit',
					"name": 'submitButton',
					"text": 'OK',
					"primary": true
				}
			],
			"initialData": {
				"code": value
			},
			"onsubmit": function(e) {
				var args = {format: 'wiki', load: 'true', convert2html: true};
				
				_ed.undoManager.transact(function() {
					ed.focus();
					if (!selectAll) {
						_ed.selection.setContent(e.data.code, args);
					} else {
						_ed.setContent(e.data.code, args) ;
					}
					_ed.undoManager.add();
				});

				_ed.selection.setCursorLocation();
				_ed.nodeChanged();

				return;
			}
		}
